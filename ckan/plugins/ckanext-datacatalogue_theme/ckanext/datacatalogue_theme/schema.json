{
  "scheming_version": 1,
  "dataset_type": "dataset",
  "about": "Custom schema used by the Data Catalogue",
  "about_url": "http://github.com/open-data/ckanext-scheming",
  "dataset_fields": [
    {
      "field_name": "title",
      "label": "Title",
      "preset": "title",
      "form_placeholder": "Enter the name of your data"
    },
    {
      "field_name": "name",
      "label": "URL",
      "preset": "dataset_slug",
      "form_placeholder": "eg. my-dataset"
    },
    {
      "required": false,
      "field_name": "tag_string",
      "label": "Tags",
      "preset": "tag_string_autocomplete",
      "form_placeholder": "eg. economy, mental health, government"
    },
    {
      "required": false,
      "form_placeholder": "Enter a short summary of what your data is used for",
      "field_name": "notes",
      "label": "Summary"
    },
    {
      "required": false,
      "form_placeholder": "Enter a description of what your data is used for",
      "field_name": "Description",
      "label": "Description",
      "preset": "markdown"
    },
    {
      "required": false,
      "field_name": "owner_org",
      "label": "Managed by business area",
      "preset": "dataset_organization"
    },
    {
      "required": false,
      "form_placeholder": "Enter information asset owner name",
      "field_name": "information_asset_owner_name",
      "label": "Information asset owner"
    },
    {
      "required": false,
      "form_placeholder": "Enter information asset owner email address",
      "field_name": "information_asset_owner_email",
      "label": "Contact",
      "preset": "email"
    },
    {
      "required": false,
      "field_name": "contains_personal_information",
      "label": "Contains personal information",
      "preset": "select_radio",
      "choices": [
        {
          "value": "yes",
          "label": "Yes"
        },
        {
          "value": "no",
          "label": "No"
        }
      ]
    },
    {
      "required": false,
      "field_name": "register",
      "label": "Register - an authoritative record for government",
      "preset": "select_radio",
      "choices": [
        {
          "value": "yes",
          "label": "Yes"
        },
        {
          "value": "no",
          "label": "No"
        },
        {
          "value": "unknown",
          "label": "Unknown"
        }
      ]
    },
    {
      "required": false,
      "field_name": "used_in_official_statistics",
      "label": "Used in official statistics",
      "preset": "select_radio",
      "choices": [
        {
          "value": "yes",
          "label": "Yes"
        },
        {
          "value": "no",
          "label": "No"
        },
        {
          "value": "unknown",
          "label": "Unknown"
        }
      ]
    },
    {
      "required": false,
      "form_placeholder": "Detail any policy or legal constraints around the use of this data",
      "field_name": "data_use_restrictions",
      "label": "Restrictions on using the data",
      "preset": "markdown"
    }
  ],
  "resource_fields": [
    {
      "field_name": "url",
      "label": "URL",
      "preset": "resource_url_upload"
    },
    {
      "field_name": "name",
      "label": "Name",
      "form_placeholder": "eg. January 2011 Gold Prices"
    },
    {
      "field_name": "format",
      "label": "Format",
      "preset": "resource_format_autocomplete"
    }
  ]
}
