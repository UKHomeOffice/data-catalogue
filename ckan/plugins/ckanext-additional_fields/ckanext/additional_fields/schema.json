{
  "scheming_version": 1,
  "dataset_type": "dataset",
  "about": "Custom schema used by the Data Catalogue",
  "about_url": "http://github.com/open-data/ckanext-scheming",
  "dataset_fields": [
    {
      "field_name": "title",
      "label": "Title",
      "preset": "title",
      "form_placeholder": "eg. A descriptive title"
    },
    {
      "field_name": "name",
      "label": "URL",
      "preset": "dataset_slug",
      "form_placeholder": "eg. my-dataset"
    },
    {
      "required": false,
      "field_name": "tag_string",
      "label": "Tags",
      "preset": "tag_string_autocomplete",
      "form_placeholder": "eg. economy, mental health, government"
    },
    {
      "required": false,
      "form_placeholder": "Summary",
      "field_name": "summary",
      "label": "Summary"
    },
    {
      "required": false,
      "field_name": "owner_org",
      "label": "Organization",
      "preset": "dataset_organization"
    },
    {
      "required": false,
      "field_name": "category",
      "label": "Category",
      "preset": "multiple_checkbox",
      "choices": [
        {
          "value": "Biometric",
          "label": "Biometric"
        },
        {
          "value": "Border Force",
          "label": "Border Force"
        },
        {
          "value": "Civil Registration",
          "label": "Civil Registration"
        },
        {
          "value": "Disclosure and Barring Service",
          "label": "Disclosure and Barring Service"
        },
        {
          "value": "HO Corporate",
          "label": "HO Corporate"
        },
        {
          "value": "HO Science",
          "label": "HO Science"
        },
        {
          "value": "Immigration",
          "label": "Immigration"
        },
        {
          "value": "Intelligence",
          "label": "Intelligence"
        },
        {
          "value": "Passport",
          "label": "Passport"
        },
        {
          "value": "Policing",
          "label": "Policing"
        }
      ]
    },
    {
      "required": false,
      "field_name": "dataset_type",
      "label": "Type",
      "preset": "multiple_checkbox",
      "choices": [
        {
          "value": "collection_of_systems",
          "label": "Collection of systems"
        },
        {
          "value": "single_database_system",
          "label": "Single database system"
        },
        {
          "value": "access_database",
          "label": "Access database"
        },
        {
          "value": "spreadsheet",
          "label": "Spreadsheet"
        },
        {
          "value": "api",
          "label": "API"
        },
        {
          "value": "rest_api",
          "label": "REST API"
        },
        {
          "value": "other_please_specify_in_the_comments",
          "label": "Other (please specify in the comments)"
        }
      ]
    },
    {
      "required": false,
      "field_name": "security_classification",
      "label": "Security Classification",
      "preset": "select_radio",
      "choices": [
        {
          "value": "official1",
          "label": "Official"
        },
        {
          "value": "official-sensitive2",
          "label": "Official-sensitive"
        },
        {
          "value": "secret3",
          "label": "Secret"
        },
        {
          "value": "top-secret4",
          "label": "Top secret"
        }
      ]
    },
    {
      "required": false,
      "field_name": "can_be_public",
      "label": "Can it be public",
      "preset": "select_radio",
      "choices": [
        {
          "value": "_yes_",
          "label": "Yes"
        },
        {
          "value": "_no_",
          "label": "No"
        },
        {
          "value": "_unknown_",
          "label": "Unknown"
        }
      ]
    },
    {
      "required": false,
      "field_name": "contains_personal_information",
      "label": "Contains personal information",
      "preset": "select_radio",
      "choices": [
        {
          "value": "_yes_",
          "label": "Yes"
        },
        {
          "value": "_no_",
          "label": "No"
        },
        {
          "value": "_unknown_",
          "label": "Unknown"
        }
      ]
    },
    {
      "required": false,
      "form_placeholder": "Other data sources feeding in",
      "field_name": "other_data_sources_feeding_in",
      "label": "Other data sources feeding in"
    },
    {
      "required": false,
      "field_name": "data_originates_in_ho",
      "label": "Data originates entirely from within the Home Office",
      "preset": "select_radio",
      "choices": [
        {
          "value": "_yes_",
          "label": "Yes"
        },
        {
          "value": "_no_",
          "label": "No"
        },
        {
          "value": "_unknown_",
          "label": "Unknown"
        }
      ]
    },
    {
      "required": false,
      "field_name": "ho_responsible",
      "label": "Home Office responsible for technical operation of system",
      "preset": "select_radio",
      "choices": [
        {
          "value": "_yes_",
          "label": "Yes"
        },
        {
          "value": "_no_",
          "label": "No"
        },
        {
          "value": "_unknown_",
          "label": "Unknown"
        }
      ]
    },
    {
      "required": false,
      "field_name": "register",
      "label": "Register - an authoritative record for government",
      "preset": "select_radio",
      "choices": [
        {
          "value": "_yes_",
          "label": "Yes"
        },
        {
          "value": "_no_",
          "label": "No"
        },
        {
          "value": "_unknown_",
          "label": "Unknown"
        }
      ]
    },
    {
      "required": false,
      "field_name": "used_in_official_statistics",
      "label": "Used in official statistics",
      "preset": "select_radio",
      "choices": [
        {
          "value": "Yes",
          "label": "Yes"
        },
        {
          "value": "No",
          "label": "No"
        },
        {
          "value": "_unknown_",
          "label": "Unknown"
        }
      ]
    },
    {
      "required": false,
      "form_placeholder": "How the data can be used (any policy and legal constraints)",
      "field_name": "how_the_data_can_be_used_any_policy_and_legal_constraints",
      "label": "How the data can be used (any policy and legal constraints)"
    },
    {
      "required": false,
      "form_placeholder": "API URL",
      "preset": "link",
      "field_name": "api_url",
      "label": "API URL"
    }
  ],
  "resource_fields": [
    {
      "field_name": "url",
      "label": "URL",
      "preset": "resource_url_upload"
    },
    {
      "field_name": "name",
      "label": "Name",
      "form_placeholder": "eg. January 2011 Gold Prices"
    },
    {
      "field_name": "format",
      "label": "Format",
      "preset": "resource_format_autocomplete"
    }
  ]
}
